    body(ontouchstart="")
        header
            .logo
                a.title(href="/") Write
                .subtitle 書くためのテーマ
            .barger
                input#barger__menu(type="checkbox", name="")
                label(for="barger__menu")
                    span
                nav
                    #nav__container
                        ul#nav__menu
                            li.menu
                                a#home ホーム
                                ul.menu__item
                                    li
                                        a → カスタマイズ
                            li.menu
                                a#page ページ
                                ul.menu__item
                                    li 
